@model AdstrTask.ViewModel.UserViewModel

<h2>Create User</h2>

<form asp-action="CreateUser" method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input class="form-control" id="name" type="text" asp-for="Name" required />
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <input class="form-control" id="email" type="email" asp-for="Email" required />
    </div>
    <div class="form-group">
        <label for="phoneNumber">Phone Number:</label>
        <input class="form-control" id="phoneNumber" type="text" asp-for="PhoneNumber" required />
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input class="form-control" id="password" type="password" asp-for="Password" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Create User" class="btn btn-primary" />
    </div>
</form>
